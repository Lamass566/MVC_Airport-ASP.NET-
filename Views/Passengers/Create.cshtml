@model WebApplication3.Models.Passengers

@{
    ViewBag.Title = "Create";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/FontA/MyCss/CRUDcss.css">

<body>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="row main-form">
            <form class="" method="post" action="#">
                <div class="form-group">
                    <label for="name" class="cols-sm-2 control-label">Дата рождения</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Date_bir, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Date_bir, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email" class="cols-sm-2 control-label">Имя</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            @Html.EditorFor(model => model.First_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="username" class="cols-sm-2 control-label">Фамилия</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Second_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Second_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password" class="cols-sm-2 control-label">Нацинальность</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Nationality, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Nationality, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirm" class="cols-sm-2 control-label">Пол</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                            @Html.EditorFor(model => model.Sex, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Sex, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="confirm" class="cols-sm-2 control-label">Класс билета</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                                @Html.EditorFor(model => model.Ticket_Сlass, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Ticket_Сlass, "", new { @class = "text-danger" })
                            </div>
                        </div>
                </div>

                <div class="form-group">
                    <label for="confirm" class="cols-sm-2 control-label">Номер рейса</label>
                    <div class="cols-sm-10">
                        <div class="input-group">
                                @Html.DropDownList("FlightN", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.FlightN, "", new { @class = "text-danger" })
                            </div>
                        </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>

            </form>
        </div>
    </div>
}
    </body>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
