@model WebApplication3.Models.AirportsArrival

@{
    ViewBag.Title = "Edit";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
<link rel="stylesheet" href="~/FontA/MyCss/CRUDcss.css">

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        <div class="container">
            <div class="row main-form">
                <form class="" method="post" action="#">
                    <div class="form-group">
                        <label for="name" class="cols-sm-2 control-label">Номер рейса</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.FlightNumber, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.FlightNumber, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="email" class="cols-sm-2 control-label">Дата прилёта</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Date_Arrival, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Date_Arrival, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="username" class="cols-sm-2 control-label">Порт прилёта</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.City_Arrival, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.City_Arrival, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="password" class="cols-sm-2 control-label">Авивлиния</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Airline, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Airline, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirm" class="cols-sm-2 control-label">Гейт</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Gate, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Gate, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="confirm" class="cols-sm-2 control-label">Статус рейса</label>
                        <div class="cols-sm-10">
                            <div class="input-group">
                                @Html.EditorFor(model => model.Flight_status, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Flight_status, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>


                </form>
            </div>
        </div>
    }
    </body>
   

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
